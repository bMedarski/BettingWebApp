@model BettingApp.Services.ViewModels.Season.CreateSeasonInputModel
@using BettingApp.Data.Common.Enums
@{
	ViewData["Title"] = "Create";
}

<h2>Create Season</h2>

<form asp-action="Create" asp-controller="Seasons" method="post">

	<label asp-for="Name"></label>
	<input asp-for="Name" />
	<label asp-for="Start"></label>
	<input asp-for="Start" />
	<label asp-for="End"></label>
	<input asp-for="End" />
	<select asp-for="SportId" asp-items="Model.Sports">
		<option selected="selected" value="">Please select</option>
	</select>
	<input type="submit" name="name" value="Create" />
</form>