@model BettingApp.Services.ViewModels.User.RegisterUserInputModel

@{
	ViewBag.Title = "Register";
	Layout = "_Layout";
}

<main class="mt-3">
	<h1 class="text-center">Register</h1>
	<hr class="hr-2 w-50 eventures-bg-color" />
	<form class="mx-auto w-50 text-center font-weight-bold" method="post" asp-action="Register" asp-controller="Users">
		<div asp-validation-summary="ModelOnly" class="bg-danger"></div>
		<div class="row d-flex justify-content-between">
			<div class="form-group col-md-5">
				<label asp-for="Username"></label>
				<input asp-for="Username" class="form-control" placeholder="Username..." />
				<span asp-validation-for="Username" class="bg-danger"></span>
			</div>
			<div class="form-group col-md-5">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" placeholder="Email..." />
				<span asp-validation-for="Email" class="bg-danger"></span>
			</div>
		</div>
		<div class="row d-flex justify-content-between">
			<div class="form-group col-md-5">
				<label asp-for="Password"></label>
				<input asp-for="Password" class="form-control" placeholder="Password..." />
				<span asp-validation-for="Password" class="bg-danger"></span>
			</div>
			<div class="form-group col-md-5">
				<label asp-for="ConfirmPassword"></label>
				<input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password..." />
				<span asp-validation-for="ConfirmPassword" class="bg-danger"></span>
			</div>
		</div>
		<hr class="hr-2 eventures-bg-color mt-4" />
		<div class="d-flex justify-content-center">
			<button type="submit" class="btn eventures-bg-color">Register</button>
		</div>
	</form>
</main>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}